

<MenuWidget>:
    canvas.before:
        Color:
            rgba : 0,0,0,0.7
        Rectangle :
            size : self.size
    Label :
        font_size : dp(60)
        font_name : 'fonts/Sackers-Gothic-Std-Light.ttf'
        text : root.parent.menu_title
        pos_hint : {"center_x" : 0.5, "center_y" : 0.6}
    Button :
        font_size : dp(30)
        font_name : 'fonts/Eurostile.ttf'
        text : root.parent.menu_button_title
        pos_hint : {"center_x" : 0.5, "center_y" : 0.3}
        size_hint : 0.2,0.1
        on_press : root.parent.on_start_button_pressed()
        background_normal : ''
        background_color : 1, .1, .2, .9